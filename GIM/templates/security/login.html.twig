{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-6 col-lg-4">
				<div class="card shadow-sm">
					<div class="card-body">
						<form method="post" class="form-signin">
							{% if error %}
								<div class="alert alert-danger">
									<strong>Erreur :</strong>
									{{ error.messageKey|trans(error.messageData, 'security') }}
								</div>
							{% endif %}

							{% if app.user %}
								<div class="alert alert-info">
									Vous êtes connecté en tant que
									{{ app.user.userIdentifier }},
									<a href="{{ path('app_logout') }}">Déconnexion</a>
								</div>
							{% endif %}

							<div class="text-center mb-4">
								<h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1>
							</div>

							<div class="form-group mb-4">
								<label for="username" class="sr-only">Username or Email</label>
								<input type="text" id="username" name="_username" class="form-control" placeholder="Username or Email" value="{{ last_username }}" required autofocus>
							</div>

							<div class="form-group mb-4">
								<label for="password" class="sr-only">Mot de passe</label>
								<input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe" required>
							</div>

							<div class="form-group mb-4">
								<a href="{{ path('connect_google_start') }}" class="btn btn-outline-danger btn-block d-flex justify-content-center align-items-center">
									<i class="fab fa-google mr-2"></i>
									Se connecter avec Google
								</a>
							</div>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<button class="btn btn-lg btn-primary btn-block" type="submit">Connexion</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
